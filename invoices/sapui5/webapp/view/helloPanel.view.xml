<mvc:View controllerName="logaligroupa21.sapui5.controller.helloPanel"
xmlns="sap.m" 
xmlns:mvc="sap.ui.core.mvc"
xmlns:core="sap.ui.core"
displayBlock="true"> 

<Panel headerText="{i18n>tituloPanel}" class="sapUiResponsiveMargin" width="auto">

<content>
<Button icon="sap-icon://action" text="{i18n>helloDialogBut}" press=".onOpenDialog" class="sapUiSmallMarginEnd"/>
<Button text="{i18n>showHelloButtonText}" press=".onShow" class="sapUiSmallMarginEnd"/>
<Input value="{/data/name1}" valueLiveUpdate="true" width="60%"/>
<Text text="{/data/name1}" class="sapUiSmallMargin boldElements sapThemeHighlight-asColor"/>

</content>
</Panel>

<core:Fragment fragmentName="logaligroupa21.sapui5.view.form01" type="XML"/>

</mvc:View>