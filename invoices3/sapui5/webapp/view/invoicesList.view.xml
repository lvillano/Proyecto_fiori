<mvc:View controllerName="logaligroupa21.sapui5.controller.invoicesList"
xmlns="sap.m" 
xmlns:mvc="sap.ui.core.mvc">

<Panel accessibleRole="Region">


<headerToolbar>
<Toolbar >
<Title text="{i18n>invoiceListTittle}"></Title>
<ToolbarSpacer/>
<SearchField width="50%" search=".filterInvoices" placeholder="{i18n>invoiceListplaceholder}">
</SearchField>
</Toolbar>
</headerToolbar>

<Table id="invoiceList"
headerText="{i18n>invoiceListTittle}"
class="sapUiResponsiveMargin" 
width="auto" 
items="{ path: 'northwind>/Invoices', 
        sorter: { path: 'ShipperName',
        group:  true }
        }">

