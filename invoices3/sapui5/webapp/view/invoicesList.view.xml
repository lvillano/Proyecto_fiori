<!-- aplica para TABLE -->
<columns>

<Column hAlign="End" minScreenWidth="Small" demandPopin="true" width="6em">
<Text text="{i18n>invoiceTableQuan}"></Text>
</Column>

<Column >
<Text text="{i18n>invoiceTableName}"></Text>
</Column>

<Column minScreenWidth="Small" demandPopin="true">
<Text text="{i18n>invoiceTableColumnStatus}"></Text>
</Column>

<Column minScreenWidth="Tablet">
<Text text="{i18n>invoiceTableSupplier}"></Text>
</Column>

<Column hAlign="End">
<Text text="{i18n>invoiceTablePrice}"></Text>
</Column>

</columns>


<items> 
<ColumnListItem type="Navigation" press="NavigateDetails">
<cells>
<ObjectNumber number="{northwind>Quantity}" emphasized="false"></ObjectNumber>
<ObjectIdentifier title="{northwind>ProductName}"></ObjectIdentifier>
<Text text="{path: 'northwind>/Status', formatter: '.formatter.invoiceStatus'}"></Text>
<Text text="{northwind>ShipperName}"></Text>
<ObjectNumber number="{ parts : [ {path: 'northwind>ExtendedPrice'}, 
{path: 'currency>/usd'} ], 
type: 'sap.ui.model.type.Currency',
formatOptions:{showMeasure: false}
}"
unit="{currency>/usd}"
state="{= ${northwind>ExtendedPrice} > 50 ? 'Success' : 'Warning'}"></ObjectNumber>
</cells>
</ColumnListItem>

