<mvc:View controllerName="logaligroupa21.sapui5.controller.helloPanel"
xmlns="sap.m" 
xmlns:mvc="sap.ui.core.mvc"
xmlns:core="sap.ui.core"
displayBlock="true"> 

<Panel headerText="{i18n>tituloPanel}" 
class="sapUiResponsiveMargin" 
width="auto" 
expandable="{device>/system/phone}"
expanded="{= !${device>/system/phone}}"
>

<content>
<Button 
icon="sap-icon://action" 
id="helloDialogBut" 
text="{i18n>helloDialogBut}" 
press=".onOpenDialog" 
class="sapUiSmallMarginEnd sapUiVisibleOnlyOnDesktop"/>
<Button 
text="{i18n>showHelloButtonText}"
 press=".onShow" 
 class="sapUiSmallMarginEnd sapUiHideOnDesktop"/>
<Input value="{/data/name1}" valueLiveUpdate="true" width="60%"/>
<Text text="{/data/name1}" class="sapUiSmallMargin boldElements sapThemeHighlight-asColor"/>

</content>
</Panel>

<core:Fragment fragmentName="logaligroupa21.sapui5.view.form01" type="XML"/>

</mvc:View>